<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="materialize/css/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <!-- Dropdown Structure -->
  <nav class="#424242 grey darken-3">
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo"><img src="images/bitmap.png" style="height: 36px; width: 150px; margin-top: 10px"/></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/" style="color: white;">Home</a></li>
        <% if(locals.kunci) { %>
        <li><a href="/profile" class="dropdown-trigger btn" data-target="dropdown1" style="background-color: white;text-transform: capitalize; color: black; border-radius: 5px;"><%= locals.kunci.name %></a></li> 
        <% } else { %>
        <li><a href="/signin">Signin</a></li>
        <% } %>
      </ul>
        
        <!-- ini untuk dropdown user -->
        <ul id='dropdown1' class='dropdown-content'>
          <li><a href="/profile" style="color: black;"><i class="material-icons">account_circle</i>profile</a></li>
          <li><a href="/logout" style="color: black;"><i class="material-icons">keyboard_tab</i>logout</a></li>
        </ul>
        <!-- ini untuk dropdown user -->
      </ul>
    </div>
  </nav>